# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Dart
[*.dart]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# SQL
[*.sql]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

# Docker
[Dockerfile]
indent_size = 4
